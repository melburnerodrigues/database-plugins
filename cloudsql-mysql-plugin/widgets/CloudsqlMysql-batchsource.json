{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "CloudSQL MySQL",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this source for lineage"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Project ID",
          "name": "projectId",
          "widget-attributes": {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Driver Name",
          "name": "jdbcPluginName",
          "widget-attributes": {
            "default": "cloudsql-mysql"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user",
          "widget-attributes": {
            "placeholder": "The username to use to connect to the CloudSQL database"
          }
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password",
          "widget-attributes": {
            "placeholder": "The password to use to connect to the CloudSQL database"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Service Account",
          "name": "serviceFilePath",
          "widget-attributes": {
            "default": "auto-detect"
          }
        }
      ]
    },
    {
      "label": "CloudSQL Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Instance Name",
          "name": "instanceName",
          "widget-attributes": {
            "placeholder": "CloudSQL instance connection name"
          }
        },
        {
          "widget-type": "textarea",
          "label": "Import Query",
          "name": "importQuery",
          "widget-attributes": {
            "rows": "4"
          },
          "plugin-function": {
            "label": "Get Schema",
            "widget": "outputSchema",
            "output-property": "schema",
            "omit-properties": [
              {
                "name": "schema"
              }
            ],
            "add-properties": [
              {
                "name": "query",
                "plugin-property-for-value": "importQuery",
                "widget-type": "textarea",
                "label": "Query",
                "widget-attributes": {
                  "rows": "4"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "textarea",
          "label": "Bounding Query",
          "name": "boundingQuery",
          "widget-attributes": {
            "rows": "4"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Split Column",
          "name": "splitBy"
        },
        {
          "widget-type": "textbox",
          "label": "Number of Splits",
          "name": "numSplits",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Connection Arguments",
          "name": "connectionArguments",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Key",
            "value-placeholder": "Value",
            "kv-delimiter": "=",
            "delimiter": ";"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string"
      }
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}